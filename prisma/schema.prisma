datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String     @id @default(cuid())
  login         String     @unique
  name          String?
  group         String?
  password      String
  posts         Post[]
}

model Post {
    id          String      @id @default(cuid())
    user        User        @relation(fields: [userId], references: [id])
    userId      String
    text        String?     @default("")
    title       String
}
